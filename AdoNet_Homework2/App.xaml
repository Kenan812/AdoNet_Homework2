<Application x:Class="AdoNet_Homework2.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AdoNet_Homework2"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <Style TargetType="Button">
            
            <Setter Property="BorderThickness" Value="3.5"/>
            <Setter Property="BorderBrush" Value="#4d4d4d"/>
            <Setter Property="Background" Value="#b3b3b3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Bold"/>

            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Style.Resources>
        </Style>

    </Application.Resources>
</Application>
